# ==============================================
# NYDRA BACKEND CONFIGURATION
# ==============================================

# Server Configuration
NODE_ENV=development
PORT=3000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/nydra
# For MongoDB Atlas (Cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nydra?retryWrites=true&w=majority

# ==============================================
# REDIS CONFIGURATION
# ==============================================

# Redis Connection (for queues and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# For Redis Cloud:
# REDIS_HOST=redis-xxxxx.c1.us-east-1-1.ec2.cloud.redislabs.com
# REDIS_PORT=12345
# REDIS_PASSWORD=your-redis-password

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# JWT Secret (IMPORTANT: Change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000
# For production:
# FRONTEND_URL=https://your-frontend-domain.com

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# ==============================================
# AI SERVICES (OPTIONAL)
# ==============================================

# OpenAI API Key (for AI-powered features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Other AI Services
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# ==============================================
# EMAIL CONFIGURATION (OPTIONAL)
# ==============================================

# SMTP Configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ==============================================
# MONITORING & ANALYTICS (OPTIONAL)
# ==============================================

# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn-here

# Analytics
ANALYTICS_API_KEY=your-analytics-key

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================

# Enable debug mode
DEBUG=nydra:*

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760

# ==============================================
# PRODUCTION CONFIGURATION
# ==============================================

# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private-key.pem

# Cluster Configuration
CLUSTER_WORKERS=auto

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
